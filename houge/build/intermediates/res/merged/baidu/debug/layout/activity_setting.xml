<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 用来存放actionbar的容器布局 -->

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_changePassword"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/revise_password" />

                <ImageView
                    android:id="@+id/iv_narrow"
                    style="@style/me_right_narrow_style" />
            </RelativeLayout>

            <View style="@style/lineStyle" />

            <View
                style="@style/lineStyle"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:id="@+id/rl_new_message_inform"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/new_message_inform" />

                <ImageView style="@style/me_right_narrow_style" />
            </RelativeLayout>

            <View style="@style/lineStyle" />

            <View
                style="@style/lineStyle"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:id="@+id/rl_aboutUs"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/about_us" />

                <ImageView style="@style/me_right_narrow_style" />
            </RelativeLayout>

            <View style="@style/lineStyle" />

            <RelativeLayout
                android:id="@+id/rl_weixingongzhong"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/office_public_number" />

                <TextView
                    android:id="@+id/tv_weixingongzhong"
                    style="@style/me_right_text_style"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View style="@style/lineStyle" />

            <RelativeLayout
                android:id="@+id/rl_contactUs"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/contact_us" />

                <TextView
                    android:id="@+id/tv_contactUs"
                    style="@style/me_right_text_style"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View style="@style/lineStyle" />

            <View
                style="@style/lineStyle"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:id="@+id/rl_yijian"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:text="@string/advance_feedback" />

                <ImageView style="@style/me_right_narrow_style" />
            </RelativeLayout>

            <View
                style="@style/lineStyle"
                android:layout_marginBottom="15dp" />

            <View style="@style/lineStyle" />

            <RelativeLayout
                android:id="@+id/rl_logout"
                style="@style/me_rl_style" >

                <TextView
                    style="@style/me_left_text_style"
                    android:layout_centerHorizontal="true"
                    android:text="@string/logout"
                    android:textColor="@color/color_e8503e" />
            </RelativeLayout>

            <View style="@style/lineStyle" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>