<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 用来存放actionbar的容器布局 -->

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/copy"
        android:layout_below="@+id/rl_actionbar"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mAboutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:background="@drawable/shapa_orange_radius"
            android:src="@drawable/about" />

        <TextView
            android:id="@+id/mAboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAboutIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dip"
            android:gravity="center"
            android:textColor="@color/color_app_theme_orange_bg"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Copyright @ 2015-2020 Xinxianren.All Rights Reserved"
        android:textColor="@color/color_7d7d7d"
        android:textSize="@dimen/smail_text"/>

    <TextView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ttt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="杭州新鲜人网络科技有限公司版权所有"
        android:textColor="@color/color_7d7d7d"
        android:textSize="@dimen/smail_text"/>

</RelativeLayout>