<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 用来存放actionbar的容器布局 -->

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/old_password" />

        <com.ysp.houge.widget.ClearEditText
            android:id="@+id/cet_old_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/input_login_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp" >

            <requestFocus />
        </com.ysp.houge.widget.ClearEditText>
    </LinearLayout>

    <View style="@style/lineStyle" />

    <View
        style="@style/lineStyle"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/new_password" />

        <com.ysp.houge.widget.ClearEditText
            android:id="@+id/cet_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/please_input_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp" >
        </com.ysp.houge.widget.ClearEditText>
    </LinearLayout>

    <View style="@style/lineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/re_new_password" />

        <com.ysp.houge.widget.ClearEditText
            android:id="@+id/cet_re_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/please_input_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp" >
        </com.ysp.houge.widget.ClearEditText>
    </LinearLayout>

    <View style="@style/lineStyle" />

    <View
        style="@style/lineStyle"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_default"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/finish"
        android:textSize="16sp" />

    <View
        style="@style/lineStyle"
        android:layout_marginBottom="20dp" />

</LinearLayout>