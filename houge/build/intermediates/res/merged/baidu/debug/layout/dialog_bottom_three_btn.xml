<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical" >

    <Button
        android:id="@+id/mBtnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog_top"
        android:padding="15dip"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/mBtnTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@drawable/btn_dialog_bottom"
        android:padding="15dip"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/mBtnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_dialog_full"
        android:padding="15dip"
        android:text="@string/cancel"
        android:textColor="@color/color_4fc0e8"
        android:textSize="16sp" />

</LinearLayout>