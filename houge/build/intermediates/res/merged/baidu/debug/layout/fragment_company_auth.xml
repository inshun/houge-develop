<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            style="@style/lineStyle"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/corporation_name" />

            <com.ysp.houge.widget.ClearEditText
                android:id="@+id/cet_corporation_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_input_the_same_as_trading_certificate"
                android:maxLength="30"
                android:maxLines="2"
                android:textSize="14sp" >
            </com.ysp.houge.widget.ClearEditText>
        </LinearLayout>

        <View style="@style/lineStyle" />

        <!-- 营业执照 -->

        <RelativeLayout
            android:id="@+id/rela_trading_certificate"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:background="@drawable/shapa_antu_imaginary_line_border" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/add_trading_certificate_copy" />

            <ImageView
                android:id="@+id/iv_trading_certificate"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                 android:layout_centerInParent="true"
                android:contentDescription="@string/add_head_card"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_light_orange_normal"
                android:visibility="gone" />
        </RelativeLayout>

        <View style="@style/lineStyle" />

        <View
            style="@style/lineStyle"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/legal_name" />

            <com.ysp.houge.widget.ClearEditText
                android:id="@+id/cet_legal_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_input_the_same_as_card_name"
                android:maxLength="5"
                android:textSize="14sp" >
            </com.ysp.houge.widget.ClearEditText>
        </LinearLayout>

        <View style="@style/lineStyle" />
        <!-- 法人手持身份证 -->

        <RelativeLayout
            android:id="@+id/rela_legal_head_card"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:background="@drawable/shapa_antu_imaginary_line_border" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/add_legal_head_card" />

            <ImageView
                android:id="@+id/iv_legal_head_card"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/add_head_card"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- 法人身份证正面 -->

        <RelativeLayout
            android:id="@+id/rela_legal_head_card_front"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shapa_antu_imaginary_line_border" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/add_legal_head_card_front" />

            <ImageView
                android:id="@+id/iv_legal_head_card_front"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/add_head_card"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- 法人身份证反面 -->

        <RelativeLayout
            android:id="@+id/rela_legal_head_card_verso"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:background="@drawable/shapa_antu_imaginary_line_border" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/add_legal_head_card_verso" />

            <ImageView
                android:id="@+id/iv_legal_head_card_verso"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/add_head_card"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_light_orange_normal"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginBottom="60dp" />
    </LinearLayout>

</ScrollView>