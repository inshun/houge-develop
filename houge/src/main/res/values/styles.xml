<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>
    <!--欢迎页去除黑白屏-->
    <style name="AppLuncherTheme" parent="android:Theme.Light.NoTitleBar">
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:background">@drawable/splash</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 加载进度 -->
    <style name="DefineprogressBarStyleSmall" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>

    </style>

    <style name="SmallButtonBlue" parent="@android:style/Widget.Button">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/skin_color_button_blue</item>
        <item name="android:background">@drawable/common_btn_small_blue</item>
        <item name="android:paddingLeft">11.0dip</item>
        <item name="android:paddingRight">11.0dip</item>
        <item name="android:minWidth">47.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">@color/skin_bar_text</item>
    </style>

    <style name="TitleBtn">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">@color/skin_bar_btn</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FileDesDialogNoBackground" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mydialog">
        <item name="@android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="@android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    <!-- ########################### wanglx start  ########################### -->
    <style name="HomeTabButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/home_tab_text_color_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type">normal</item>
    </style>

    <!-- 分割线风格 -->
    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_eaeaea</item>
    </style>

    <style name="me_rl_style">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="me_left_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_838383</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="me_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_dadada</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="me_right_narrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/narrow_gray</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- ########################### wanglx end  ########################### -->


    <!-- pop左边飞入及退出动画 -->
    <style name="popwin_anim_top">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="CheckboxOrangeTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_orange_style</item>
    </style>

    <style name="CheckboxBlueTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_blue_style</item>
    </style>
</resources>