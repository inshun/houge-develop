<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_default"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mPartJobDistance"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mPartJobMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mPartJobDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/mPartJobTime"
            android:textColor="@color/color_adadad"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mPartJobTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_adadad"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mPartJobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

</LinearLayout>