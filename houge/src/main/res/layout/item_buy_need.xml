<?xml version="1.0" encoding="utf-8"?>
<!-- 暂时没有用到(我购买的订单————>我发布的) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_default"
    android:orientation="vertical" >

    <!-- 顶部黄色消息 -->

    <TextView
        android:id="@+id/tv_order_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_theme_blue_bg"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/smail_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <!-- 状态描述文本 -->

        <TextView
            android:id="@+id/tv_status_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true" />

        <!-- 功能按钮 -->

        <Button
            android:id="@+id/btn_function"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@color/color_app_theme_blue_66_tran_bg"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        style="@style/lineStyle"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shapa_driver_8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:showDividers="middle" >

        <!-- 技能图片 -->

        <ImageView
            android:id="@+id/iv_need_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            android:src="@drawable/defaultpic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical" >

            <!-- 技能名称 -->

            <TextView
                android:id="@+id/tv_need_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/color_999999" />

            <!-- 现在的价格 -->

            <TextView
                android:id="@+id/tv_need_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/lineStyle"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shapa_driver_8dp"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:showDividers="middle" >

        <!-- 服务者头像 -->

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/shapa_sex_def"
            android:contentDescription="@null"
            android:padding="1dp"
            android:src="@drawable/user_small" />

        <!-- 昵称 -->

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="8"
            android:textColor="@color/color_e5e5e5" />

        <!-- 星级 -->

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/start"
            android:gravity="center"
            android:textColor="@color/color_app_theme_orange_bg" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- 电话 -->

        <ImageView
            android:id="@+id/iv_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/skill_level_message" />
        <!-- 短信 -->

        <ImageView
            android:id="@+id/iv_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/skill_level_message" />
    </LinearLayout>

</LinearLayout>