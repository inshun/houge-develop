<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <View
        android:id="@+id/mDividerAbove"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_b2b2b2" />

    <RelativeLayout
        android:id="@+id/mEditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mDividerAbove"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dip" >

        <EditText
            android:id="@+id/mChatSendEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mSendLayout"
            android:background="@drawable/view_send_content"
            android:gravity="center_vertical"
            android:maxHeight="100dip"
            android:paddingLeft="5dp"
            android:textColor="@color/color_adadad"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/mSendLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/mChatSendBtn"
                android:layout_width="36.0dip"
                android:layout_height="36.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:background="@drawable/btn_actionbar_color"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/mDividerBelow"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/mEditLayout"
        android:background="@color/color_b2b2b2" />

</RelativeLayout>