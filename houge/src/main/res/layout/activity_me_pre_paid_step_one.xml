<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 用来存放actionbar的容器布局 -->

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
<!--
    <com.ysp.houge.widget.PaidSalaryStepView
        android:id="@+id/mPaidSalaryStepView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <com.ysp.houge.widget.EditChooseView
            android:id="@+id/et_paidNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ysp.houge.widget.EditChooseView
            android:id="@+id/et_paidAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_actionbar_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textSize="16sp" >
    </Button>

</LinearLayout>