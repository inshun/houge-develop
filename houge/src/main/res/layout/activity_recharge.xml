<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 用来存放actionbar的容器布局 -->

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/lineStyle"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recharge_money" />

        <com.ysp.houge.widget.ClearEditText
            android:id="@+id/cet_recharge_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/please_input_recharge_money"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp" >
        </com.ysp.houge.widget.ClearEditText>
    </LinearLayout>

    <View style="@style/lineStyle" />

    <View
        style="@style/lineStyle"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/rela_make_money_by_skill"
        style="@style/me_rl_style" >

        <TextView
            style="@style/me_left_text_style"
            android:drawableLeft="@drawable/icon_zhifubao"
            android:drawablePadding="8dp"
            android:text="@string/alipay" />

        <ImageView
            android:id="@+id/iv_pay_way_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_sel_orange" />
    </RelativeLayout>

    <View style="@style/lineStyle" />

    <View
        style="@style/lineStyle"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_default"
        android:text="@string/sure" />

    <View style="@style/lineStyle" />

</LinearLayout>